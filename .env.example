# Environment Configuration - Copy to .env and fill with actual values
# DO NOT COMMIT .env FILE WITH REAL CREDENTIALS

# Server Configuration
NODE_ENV=development
PORT=8000

# Database
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/?appName=appname

# CORS Configuration (comma-separated URLs for production)
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# JWT Secrets (Generate strong random strings in production)
# Generate using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ACCESS_TOKEN_SECRET=your_long_random_access_token_secret_here_minimum_32_chars
ACCESS_TOKEN_EXPIRY=1d
REFRESH_TOKEN_SECRET=your_long_random_refresh_token_secret_here_minimum_32_chars
REFRESH_TOKEN_EXPIRY=10d

# Email Configuration (Gmail SMTP or other providers)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password_not_regular_password
EMAIL_FROM=noreply@yourdomain.com
EMAIL_FROM_NAME="Your App Name"

# Redis Configuration (for rate limiting and caching)
REDIS_URL=redis://username:password@host:port

# Firebase Configuration
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@your_project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n

# Web Push VAPID Keys (Generate with: web-push generate-vapid-keys)
PUBLIC_VAPID_KEY=your_public_vapid_key
PRIVATE_VAPID_KEY=your_private_vapid_key
WEB_PUSH_CONTACT=mailto:your_email@gmail.com

# Payment Configuration
PAYMENT_GRACE_PERIOD=2

# Reminder Configuration
DEFAULT_REMINDER_HOUR=9
DEFAULT_REMINDER_MINUTE=0

# SMS Configuration (Optional - for production SMS)
MSG91_AUTH_KEY=your_msg91_auth_key_here
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890
